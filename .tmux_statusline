# This tmux statusbar config was created by tmuxline.vim
# on k, 28 máj 2019

set -g status-justify "left"
set -g status "on"
set -g status-left-style "none"
set -g status-right-style "none"
set -g status-style "none,bg=colour238"
set -g status-right-length "100"
set -g status-left-length "100"
set -g message-command-style "fg=colour249,bg=colour110"
set -g message-style "fg=colour249,bg=colour110"
set -g pane-active-border-style "fg=colour110"
set -g pane-border-style "fg=colour237"
setw -g window-status-activity-style "none,fg=colour110,bg=colour238"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=colour110,bg=colour238"
set -g status-left "#[fg=colour238,bg=colour110] #S #[fg=colour110,bg=colour238,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour237,bg=colour238,nobold,nounderscore,noitalics]#[fg=colour249,bg=colour237] #(tmux-mem-cpu-load)  %Y-%m-%d  %H:%M #[fg=colour110,bg=colour237,nobold,nounderscore,noitalics]#[fg=colour238,bg=colour110] Uptime:#(uptime |cut -f 4-5 -d ' ' | cut -f 1 -d ',') "
setw -g window-status-format "#[fg=colour249,bg=colour238] #I #[fg=colour249,bg=colour238] #W "
setw -g window-status-current-format "#[fg=colour238,bg=colour110,nobold,nounderscore,noitalics]#[fg=colour238,bg=colour110] #I #[fg=colour237,bg=colour110] #W #[fg=colour110,bg=colour238,nobold,nounderscore,noitalics]"

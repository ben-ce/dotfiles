# This tmux statusbar config was created by tmuxline.vim
# on k, 28 máj 2019

set -g status-justify "left"
set -g status "on"
set -g status-left-style "none"
set -g status-right-style "none"
set -g status-style "none,bg=colour0"
set -g status-right-length "100"
set -g status-left-length "100"
set -g message-command-style "fg=colour249,bg=colour3"
set -g message-style "fg=colour249,bg=colour3"
set -g pane-active-border-style "fg=colour3"
set -g pane-border-style "fg=colour237"
setw -g window-status-activity-style "none,fg=colour3,bg=colour0"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=colour3,bg=colour0"
set -g status-left "#[fg=colour0,bg=colour7] #S #[fg=colour7,bg=colour0,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour249,bg=colour0] #(tmux-mem-cpu-load)   %Y-%m-%d   %H:%M #[fg=colour3,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour0,bg=colour3] Uptime:#(uptime |cut -f 4-5 -d ' ' | cut -f 1 -d ',') "
setw -g window-status-format "#[fg=colour249,bg=colour0] #I #[fg=colour249,bg=colour0] #W "
setw -g window-status-current-format "#[fg=colour0,bg=colour3,nobold,nounderscore,noitalics]#[fg=colour0,bg=colour3] #I #[fg=colour237,bg=colour3] #W #[fg=colour3,bg=colour0,nobold,nounderscore,noitalics]"
